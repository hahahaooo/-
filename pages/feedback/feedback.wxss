page .fb_main {
  padding: 15rpx;
  width: 100%;
  color: #666;
  background-color: #eee;
}
page .fb_main .fb_title {
  padding: 15rpx 0;
}
page .fb_main .fb_tips {
  display: flex;
  flex-wrap: wrap;
}
page .fb_main .fb_tips text {
  width: 30%;
  padding: 10rpx;
  background-color: #fff;
  margin: 20rpx 10rpx;
  text-align: center;
}
page .fb_main .fb_content {
  background-color: #fff;
  margin-top: 20rpx;
}
page .fb_main .fb_content textarea {
  padding: 10rpx;
}
page .fb_main .fb_content .fb_tool {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 20rpx;
}
page .fb_main .fb_content .fb_tool button {
  margin: 0;
  width: 90rpx;
  height: 90rpx;
  font-size: 60rpx;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  color: #ccc;
  margin-top: 20rpx;
}
page .fb_main .fb_content .fb_tool view {
  margin-left: 15rpx;
  margin-top: 20rpx;
}
page .fb_main .form_btn_wrap {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}
page .fb_main .form_btn_wrap button {
  width: 30%;
  margin: 0;
}
