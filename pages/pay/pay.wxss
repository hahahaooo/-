page {
  padding-bottom: 90rpx;
}
.revice_address_row .address {
  display: flex;
  padding: 20px;
}
.revice_address_row .address .user_info {
  flex: 5;
}
.revice_address_row .address .user_phone {
  flex: 3;
  text-align: right;
}
.cart_content .cart_title {
  padding: 20px;
  font-size: 36rpx;
  color: var(--themeColor);
  border-top: 1px solid currentColor;
  border-bottom: 1px solid currentColor;
}
.cart_content .cart_item {
  padding: 20rpx;
  border-top: ;
}
.cart_content .cart_item .cart_main {
  display: flex;
}
.cart_content .cart_item .cart_main .cart_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-content: center;
}
.cart_content .cart_item .cart_main .cart_img_wrap image {
  width: 80%;
}
.cart_content .cart_item .cart_main .cart_info_wrap {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-content: center;
  font-size: 30rpx;
}
.cart_content .cart_item .cart_main .cart_info_wrap .goods_name {
  display: -webkit-box;
  overflow: hidden;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.cart_content .cart_item .cart_main .cart_info_wrap .goods_price_wrap {
  display: flex;
  justify-content: space-between;
}
.cart_content .cart_item .cart_main .cart_info_wrap .goods_price_wrap .goods_price {
  color: var(--themeColor);
  font-weight: 600;
  font-size: 34rpx;
}
.cart_content .cart_item .cart_main .cart_info_wrap .goods_price_wrap .cart_num_tool {
  display: flex;
}
.cart_content .cart_item .cart_main .cart_info_wrap .goods_price_wrap .cart_num_tool .goods_num {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer_tool {
  border-top: 1rpx solid #ccc;
  background-color: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
}
.footer_tool .total_price_wrap {
  text-align: right;
  padding-right: 15rpx;
  flex: 4;
}
.footer_tool .total_price_wrap .total_price {
  font-size: 32rpx;
  color: var(--themeColor);
  font-weight: 600;
}
.footer_tool .total_price_wrap .free {
  font-size: 28rpx;
}
.footer_tool .pay_for_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-weight: 600;
  font-size: 32rpx;
  background-color: var(--themeColor);
}
